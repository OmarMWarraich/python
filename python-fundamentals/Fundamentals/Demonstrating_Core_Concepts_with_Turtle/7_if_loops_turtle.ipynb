    "import turtle\n",
    "turtle.speed(100)\n",
    "\n",
    "length=int(input('please enter side length:'))\n",
    "sides=int(input('please enter number of sides:'))\n",
    "\n",
    "while True:\n",
    "    length = length -2 \n",
    "    turtle.forward(length)\n",
    "    turtle.left(360/sides)\n",
    "    turtle.left(1)\n",
    "    if length < 0:\n",
    "        break"
